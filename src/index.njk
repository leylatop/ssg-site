---
layout: layout/base.njk
eleventyComputed:
  meta:
    title: "{{ locales[lang].meta.home.title | safe }}"
    description: "{{ locales[lang].meta.home.description | safe }}"
    keywords: "{{ locales[lang].meta.home.keywords | safe }}"
pagination:
  data: site.supportedLangs
  size: 1
  alias: lang
permalink: "{{ lang }}/index.html"
---

{% set locale = locales[lang] %}

<section class="text-center py-16">
    <h1 class="text-4xl font-bold mb-4"> {{ locale.content.home.welcome }} {{ site.name }}</h1>
    <p class="text-gray-600 max-w-2xl mx-auto">{{ description }}</p>
</section>
