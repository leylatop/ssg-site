---
layout: layout/feature.njk
eleventyComputed:
  meta:
    title: "{{ locales[lang].meta.feature.title | safe }}"
    description: "{{ locales[lang].meta.feature.description | safe }}"
    keywords: "{{ locales[lang].meta.feature.keywords | safe }}"
pagination:
  data: site.supportedLangs
  size: 1
  alias: lang
permalink: "{{ lang }}/feature/index.html"
---

{% set locale = locales[lang] %}
<section class="prose max-w-3xl mx-auto">
    <h2 class="text-3xl font-bold">{{ locale.content.feature.title }}</h2>
    <ul>
        <li>{{ locale.content.feature.description1 }}</li>
        <li>{{ locale.content.feature.description2 }}</li>
        <li>{{ locale.content.feature.description3 }}</li>
    </ul>
</section>