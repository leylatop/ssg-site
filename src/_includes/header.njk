<header class="bg-white shadow-sm">
    <nav class="max-w-6xl mx-auto px-4 py-4" aria-label="Main navigation">
        <div class="flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-blue-600">{{ site.name }}</a>
            <ul class="hidden md:flex space-x-6">
                {% for item in site.navLinks %}
                <li>
                    <a href="{{ item.url }}" 
                       class="hover:text-blue-600 {% if page.url == item.url %}font-bold{% endif %}">
                       {{ item.title }}
                    </a>
                </li>
                {% endfor %}
            </ul>
             <hr />

        </div>
    </nav>
</header>